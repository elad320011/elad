pipeline {
    agent {label 'jenkins-host'}

    environment {
        DOCKER_REGISTRY = "elad320011"
        IMAGE_NAME = "elad-website"
        NAMESPACE = "elad-dev"
        DEPLOYMENT_NAME = "elad-website"
        CONTAINER_NAME = "elad-website"
        DEV_IMAGE_TAG = "dev-${new Date().format("yyyyMMddHHmmss")}"
        DEV_IMAGE_PATH="${DOCKER_REGISTRY}/${IMAGE_NAME}:${DEV_IMAGE_TAG}"
        LATEST_IMAGE_PATH="${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'elad-dev',
                    credentialsId: 'elad-git-token',
                    url: 'https://github.com/elad320011/elad.git'
            }
        }

        stage('Build and Push Docker Images') {
            steps {
                script {
                    def devImage = docker.build("${DEV_IMAGE_PATH}")
                    def latestImage = docker.build("${LATEST_IMAGE_PATH}")
                    docker.withRegistry("https://registry.hub.docker.com", "elad-dockerhub") {
                        devImage.push()
                        latestImage.push()
                    }
                }
            }
        }

        stage('Update Kubernetes Deployment') {
            steps {
                sh "microk8s kubectl set image deployment/${DEPLOYMENT_NAME} ${CONTAINER_NAME}=latest -n ${NAMESPACE} && true"
            }
        }

        stage('Testing') {
            steps {
                sh 'python3 -m pip install -r requirements.txt'
                sh 'python3 Tests/test_app.py'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
